<!DOCTYPE html>
%html
  %head
    %title Nodebook
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %div.main
      %header
        %hgroup
          %a{ href: (user_signed_in? ? '/' : welcome_path) }
            %span N
            = inline_svg 'logo'
            %span debook
        %nav
          %ul
            - if user_signed_in?
              %li= link_to 'My nodebook', '/'
              %li= link_to 'Log out', destroy_user_session_path, method: :delete
            - else
              %li= link_to 'Log in', new_user_session_path
      %div.information
        -if notice
          %span.notice= notice
        -if alert
          %span.alert= alert

      %div.content
        = yield
      %footer
        %center
          %nav
            %ul
              %li= link_to 'About', about_path
